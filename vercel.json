{
    "redirects": [
      { "source": "/(.*)", "destination": "https://assignment-management-system-nine.vercel.app/$1", "statusCode": 301 }
    ],
    "headers": [
      {
        "source": "/(.*)",
        "headers": [
          { "key": "Strict-Transport-Security", "value": "max-age=63072000; includeSubDomains; preload" },
          { "key": "Content-Security-Policy", "value": "default-src 'self'; img-src 'self' data:; media-src 'self'" },
          { "key": "X-Content-Type-Options", "value": "nosniff" },
          { "key": "X-Frame-Options", "value": "DENY" },
          { "key": "X-XSS-Protection", "value": "1; mode=block" }
        ]
      }
    ]
  }
  